{
  "env": {
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "ignorePatterns": ["*.js"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "no-extra-semi": "error",
    "eol-last": ["error", "always"],
    "no-multiple-empty-lines": ["error", {"max": 2, "maxEOF": 0}],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}